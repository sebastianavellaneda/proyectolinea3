<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/screen"
android:gravity="center"
android:padding="16dp">

<!-- Logo -->
<ImageView
    android:id="@+id/imgLogo"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/football_logo"
    android:contentDescription="@string/app_name"
    android:layout_gravity="center" />


<!-- Icono del usuario -->
<ImageView
    android:id="@+id/imgUsuario"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/icuser"
    android:contentDescription="@string/user_icon"
    android:layout_gravity="center"
    android:layout_marginTop="16dp" />

<!-- Nombre de usuario -->
<TextView
    android:id="@+id/tvNombreUsuario"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nombre usuario"
    android:textColor="@android:color/holo_red_light"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:layout_marginTop="8dp" />

<!-- Primer fila de botones -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <!-- Botón Gestionar Partidos -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/btnGestionarPartidos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icball"
            android:contentDescription="@string/manage_matches" />

        <TextView
            android:id="@+id/tvGestionarPartidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar Partidos"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Botón Chat -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/btnChat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icchat"
            android:contentDescription="@string/chat" />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>

<!-- Segunda fila de botones -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <!-- Botón Crear Partido -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/btnCrearPartido"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icadd"
            android:contentDescription="@string/create_match" />

        <TextView
            android:id="@+id/tvCrearPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Partido"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Botón Buscar Partido -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/btnBuscarPartido"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icbuscar"
            android:contentDescription="@string/search_match" />

        <TextView
            android:id="@+id/tvBuscarPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Partido"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>

<!-- Botón Salir -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/btnSalir"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icexit"
        android:contentDescription="@string/exit" />

    <TextView
        android:id="@+id/tvSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_gravity="center" />
</LinearLayout>
</LinearLayout>
